{
    "id": "cube_corners",
    "name": "Cube Corner Sphere Inversions",
    "description": "Similar to tangent_spheres, but this time it's 8 spheres at the corners of the unit cube",
    "algorithm": "chaos_sets",
    "plotter": {
        "radius": 4
    },
    "cluster": {
        "type": "circle",
        "center": [1, 0, 0],
        "x_dir": [0, 1, 0],
        "y_dir": [0, 0, 1],
        "radius": 1,
        "color": [0.5, 0.3, 0.1],
        "num_points": 100
    },
    "cluster_copies": 5,
    "iters": 1000,
    "ifs": {
        "xforms": [
            ["chain", [
                ["translate", -1, -1, -1],
                ["invert"],
                ["translate", 1, 1, 1]
            ]],
            ["chain", [
                ["translate", -1, -1, 1],
                ["invert"],
                ["translate", 1, 1, -1]
            ]],
            ["chain", [
                ["translate", -1, 1, -1],
                ["invert"],
                ["translate", 1, -1, 1]
            ]],
            ["chain", [
                ["translate", -1, 1, 1],
                ["invert"],
                ["translate", 1, -1, -1]
            ]],
            ["chain", [
                ["translate", 1, -1, -1],
                ["invert"],
                ["translate", -1, 1, 1]
            ]],
            ["chain", [
                ["translate", 1, -1, 1],
                ["invert"],
                ["translate", -1, 1, -1]
            ]],
            ["chain", [
                ["translate", 1, 1, -1],
                ["invert"],
                ["translate", -1, -1, 1]
            ]],
            ["chain", [
                ["translate", 1, 1, 1],
                ["invert"],
                ["translate", -1, -1, -1]
            ]]
        ]
    }
}
