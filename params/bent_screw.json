{
    "id": "bent_screw",
    "name": "Bent Screw",
    "description": "Screw motion is rotation combined with translation along the axis. If you use a poloidal rotation to bend the axis around a unit circle, you get an interesting twisty shape.",
    "algorithm": "chaos_sets",
    "cluster": {
        "type": "quad",
        "dims": [1, 5],
        "center": [-1, 0, 0],
        "color": [0.3, 0.8, 0.4],
        "num_points": 100
    },
    "plotter": {
        "radius": 10
    },
    "cluster_copies": 4,
    "iters": 1000,
    "ifs": {
        "xforms": [
            ["chain", [
                ["poloidal", 1, 0, 0, 90],
                
                ["rotate", 0, 0, 1, 30],
                ["translate", 0, 0, 0.3],

                ["poloidal", -1, 0, 0, 90]
            ]],
            ["+inverse"]
        ]
    }
}
