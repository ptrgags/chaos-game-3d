{
    "id": "spirals_3d",
    "name": "3D Logarithmic Spirals",
    "description": "Logarithmic spirals (rotation + uniform scale) but in 3D.",
    "algorithm": "chaos_sets",
    "plotter": {
        "type": "scatter",
        "format": "glb",
        "node_capacity": 1000,
        "max_depth": 10,
        "radius": 10
    },
    "initial_set": {
        "type": "line",
        "center": [1, 0, 0],
        "dims": [0.2, 0.2, 2],
        "start": [1, 0, -1],
        "end": [1, 0, 1],
        "color": [0.5, 0.3, 0.1],
        "num_points": 10
    },
    "initial_set_copies": 10,
    "iters": 1000,
    "ifs": {
        "chooser": "uniform",
        "xforms": [
            ["chain", [
                ["rotate", 0, 0, 1, 0.01],
                ["scale", 1.01]
            ]],
            ["+inverse"]
        ]
    }
}
