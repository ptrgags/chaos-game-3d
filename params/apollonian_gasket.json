{
    "id": "apollonian_gasket",
    "name": "Apollonian Gasket 3D",
    "description": "Apollonian Gasket fractal generalized to 3D",
    "algorithm": "chaos_sets",
    "plotter": {
        "type": "scatter",
        "format": "glb",
        "node_capacity": 1000,
        "max_depth": 7,
        "radius": 3
    },
    "initial_set": {
        "type": "box",
        "center": [0, 0, 0.5],
        "dims": [0.1, 0.001, 0.1],
        "color": [0.8, 0.1, 0.1],
        "num_points": 10
    },
    "initial_set_copies": 4,
    "iters": 10000,
    "ifs": {
        "chooser": "uniform",
        "xforms": [
            ["chain", [
                ["rotate", 0, 1, 0, 0.25],
                ["scale", 2],
                ["translate", 1, 0, 0],
                ["invert"],
                ["rotate", 0, 1, 0, 0.25],
                ["scale", 0.5],
                ["translate", 0, 0, 0.5]
            ]],
            ["chain", [
                ["translate", 0, 0, -0.5],
                ["scale", 2],
                ["rotate", 0, -1, 0, 0.25],
                ["invert"],
                ["translate", -1, 0, 0],
                ["scale", 0.5],
                ["rotate", 0, -1, 0, 0.25]
            ]],
            ["chain", [
                ["translate", 1, 0, 1],
                ["invert"],
                ["reflect_vec", 1, 0, 0],
                ["translate", 1, 0, -1]
            ]],
            ["chain", [
                ["translate", -1, 0, 1],
                ["reflect_vec", 1, 0, 0],
                ["invert"],
                ["translate", -1, 0, -1]
            ]],
            ["chain", [
                ["translate", 0, 1, 1],
                ["invert"],
                ["reflect_vec", 0, 1, 0],
                ["translate", 0, 1, -1]
            ]],
            ["chain", [
                ["translate", 0, -1, 1],
                ["reflect_vec", 0, 1, 0],
                ["invert"],
                ["translate", 0, -1, -1]
            ]]
        ]
    }
}
