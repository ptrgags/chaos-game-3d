{
    "id": "loxodromic",
    "name": "3D Loxodromic Transformation",
    "algorithm": "chaos_sets",
    "initial_set": {
        "type": "box",
        "dims": [0.1, 0.1, 4],
        "center": [0, 0, 0],
        "color": [0.3, 0.8, 0.4],
        "num_points": 50
    },
    "plotter": {
        "type": "scatter",
        "format": "glb",
        "node_capacity": 1000,
        "max_depth": 10,
        "radius": 4
    },
    "initial_set_copies": 5,
    "iters": 2000,
    "ifs": {
        "chooser": "uniform",
        "xforms": [
            ["chain", [
                ["poloidal", 1, 0, 0, 90],

                ["rotate", 0, 0, 1, 15],
                ["scale", 1.05],

                ["poloidal", 1, 0, 0, -90]
            ]],
            ["+inverse"]
        ]
    }
}
