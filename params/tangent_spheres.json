            ["chain", [
                ["translate", 1, 0, -1],
                ["invert"],
                ["translate", -1, 0, 1]
            ]],
            ["chain", [
                ["translate", 1, 0, 1],
                ["invert"],
                ["translate", -1, 0, -1]
            ]],
            ["chain", [
                ["translate", -1, 0, 1],
                ["invert"],
                ["translate", 1, 0, -1]
            ]]
        ]
