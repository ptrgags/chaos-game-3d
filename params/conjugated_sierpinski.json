{
    "id": "conjugated_sierpinski",
    "name": "Conjugated Sierpinski Tetrahedron",
    "description": "Sierpinski tetrahedron transforms conjugated by a transformation that includes a sphere inverstion. This causes the tetrahedron to bulge outwards in a curved shape",
    "algorithm": "chaos",
    "iters": 500000,
    "plotter": {
        "radius": 5
    },
    "ifs": {
        "chooser": "uniform",
        "xforms": [
            ["chain", [
                ["poloidal", 1, 0, 0, 90],

                ["scale", 0.5],
                ["translate", -0.5, -0.5, 0.0],

                ["poloidal", -1, 0, 0, 90]
            ]],
            ["chain", [
                ["poloidal", 1, 0, 0, 90],

                ["scale", 0.5],
                ["translate", 0.5, -0.5, 0.0],

                ["poloidal", -1, 0, 0, 90]
            ]],
            ["chain", [
                ["poloidal", 1, 0, 0, 90],

                ["scale", 0.5],
                ["translate", 0.0, 0.5, -0.5],

                ["poloidal", -1, 0, 0, 90]
            ]],
            ["chain", [
                ["poloidal", 1, 0, 0, 90],

                ["scale", 0.5],
                ["translate", 0.0, 0.5, 0.5],

                ["poloidal", -1, 0, 0, 90]
            ]]
        ]
    }
}
