{
    "id": "inv_hyperboloid",
    "name": "Inverse Hyperboloid",
    "description": "A hyperboloid of one sheet inverted in the unit sphere",
    "algorithm": "chaos_sets",
    "plotter": {
        "type": "scatter",
        "format": "glb",
        "node_capacity": 1000,
        "max_depth": 10,
        "radius": 10
    },
    "initial_set": {
        "color": [0.8, 0.4, 0.2],
        "type": "line",
        "start": [1.1, -50, 50],
        "end": [1.1, 50, -50],
        "num_points": 500
    },
    "initial_set_copies": 10,
    "iters": 100,
    "ifs": {
        "chooser": "uniform",
        "xforms": [
            ["invert"],
            ["rotate", 0, 0, 1, 22.5],
            ["rotate", 0, 0, -1, 22.5]
        ]
    },
    "color_ifs": {
        "chooser": "uniform",
        "xforms": [
            ["identity"]
        ]
    }
}
